doctype html

html(data-ng-app = "application", lang = "en")

  head

    base(href = system.path)

    link(rel = "stylesheet", href = "resources/static/styles/style-1.css")
    link(rel = "stylesheet", href = "resources/static/styles/style-2.css")

    title
      = application.title

  body

    div(data-ui-view = "header")
    div(data-ui-view = "main-content")
    div(data-ui-view = "footer")

    script(type = "text/javascript", src = "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular.min.js")
    script(type = "text/javascript", src = "https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js")

    script(type = "text/javascript", src = "resources/static/scripts/script-1.js")
